<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white"/> <!-- Color de fondo blanco -->

    <!-- Bordes redondeados (40dp en todas las esquinas) -->
    <corners android:radius="40dp"/>

    <!-- Sombreado negro alrededor -->
    <stroke
        android:width="2dp"
        android:color="#80000000"
    android:dashWidth="0dp"
    android:dashGap="0dp"/>

    <!-- Espacio interno para que el contenido no toque los bordes -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>